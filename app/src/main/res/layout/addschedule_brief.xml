<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/addschedule_backgroud"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/back_button"
        android:layout_width="36dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="취소"
        android:textColor="#7A7A7A"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/save_button"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="저장"
        android:textColor="#7A7A7A"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/knock_button"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:text="노크"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/invite_knock_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/yellow_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/schedule_title"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:gravity="top"
        android:hint="일정 제목을 적어주세요"
        android:lineSpacingExtra="0sp"
        android:text="일정 제목"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationY="-0.4sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/brief_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="36dp"
        app:layout_constraintTop_toBottomOf="@id/schedule_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/brief_dateNTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/brief_date"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="14sp"
                android:translationY="-0.64sp"
                android:gravity="top"
                android:textColor="#4B4B4B"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="12.24 월요일"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:lineSpacingExtra="1sp"/>

            <TextView
                android:id="@+id/brief_start_time"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="14sp"
                android:translationY="-0.64sp"
                android:gravity="top"
                android:textColor="#4B4B4B"
                android:text="오전 10시 20분"
                app:layout_constraintEnd_toStartOf="@id/brief_dateNTime_bar"
                app:layout_constraintTop_toTopOf="parent"
                android:lineSpacingExtra="1sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/brief_dateNTime_bar"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="14sp"
                android:translationY="-0.64sp"
                android:gravity="top"
                android:textColor="#4B4B4B"
                android:text=" - "
                app:layout_constraintEnd_toStartOf="@id/brief_end_time"
                app:layout_constraintTop_toTopOf="parent"
                android:lineSpacingExtra="1sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/brief_end_time"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="14sp"
                android:translationY="-0.64sp"
                android:gravity="top"
                android:textColor="#4B4B4B"
                android:text="오후 12시 30분"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:lineSpacingExtra="1sp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>