<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGroupActivity">

    <LinearLayout
        android:id="@+id/groupCreateHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/create_group_back"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="21dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/page_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            android:text="그룹 생성"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/create_group_profile_back"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="153dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupCreateHeader" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/user_icon"
        app:layout_constraintLeft_toLeftOf="@id/create_group_profile_back"
        app:layout_constraintRight_toRightOf="@id/create_group_profile_back"
        app:layout_constraintTop_toTopOf="@id/create_group_profile_back"
        app:layout_constraintBottom_toBottomOf="@id/create_group_profile_back"/>

    <ImageButton
        android:id="@+id/btGroupCreateCamera"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/camera"
        app:layout_constraintRight_toRightOf="@id/create_group_profile_back"
        app:layout_constraintBottom_toBottomOf="@id/create_group_profile_back"/>

    <EditText
        android:id="@+id/create_group_edittext"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:hint="그룹명을 입력해주세요"
        android:textSize="14sp"
        android:fontFamily="@font/spoqahansansneo_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btGroupCreateCamera" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btGroupCreateNext"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/bt_border"
        android:backgroundTint="#A8A8A8"
        android:text="다음 단계"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/spoqahansansneo_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>