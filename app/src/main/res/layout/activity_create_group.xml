<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGroupActivity">
    <LinearLayout
        android:id="@+id/groupCreateHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:src="@drawable/page_back"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_marginTop="21dp"
            android:layout_marginStart="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="그룹 생성"
            android:textSize="20sp"
            android:layout_marginStart="17dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/groupCreateHeader"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="153dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:src="@drawable/circle"
        android:background="@null"
        android:scaleType="fitCenter"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="153dp"
        app:layout_constraintTop_toBottomOf="@id/groupCreateHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp"
        android:src="@drawable/user_icon"
        android:background="@null"
        android:scaleType="fitCenter"/>
    <ImageButton
        android:id="@+id/btGroupCreateCamera"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@id/groupCreateHeader"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="230dp"
        android:layout_marginTop="103dp"
        android:src="@drawable/camera"
        android:background="@null"
        android:scaleType="fitCenter"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/btGroupCreateCamera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="그룹명을 입력해주세요"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/btGroupCreateNext"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:text="다음 단계"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        android:background="@drawable/bt_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="27dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#A8A8A8"
        tools:ignore="MissingConstraints" />





</androidx.constraintlayout.widget.ConstraintLayout>