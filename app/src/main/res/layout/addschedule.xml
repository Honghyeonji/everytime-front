<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/addscedule_backgroud">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/save_button"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="저장"
            android:textColor="#7A7A7A"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <ImageView
            android:id="@+id/yellow_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="63dp"
            android:background="@drawable/yellow_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/schedule_title"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:gravity="top"
            android:hint="일정 제목을 적어주세요"
            android:lineSpacingExtra="0sp"
            android:text="일정 제목"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationY="-0.4sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/yellow_icon"
            app:layout_constraintTop_toTopOf="parent" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_frame"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/schedule_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/start_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="36dp"
                    android:background="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="시작"
                    android:textColor="#4B4B4B"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="36dp"
                    app:layout_constraintStart_toEndOf="@id/start_icon"
                    android:layout_marginStart="12dp"/>

                <LinearLayout
                    android:layout_width="194dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="36dp"
                    android:id="@+id/addschedule_start"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="102dp"
                        android:layout_height="24dp"
                        android:id="@+id/detail_start_date"
                        android:layout_marginEnd="16dp"
                        android:textColor="#4B4B4B"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="11월 10일(목)"/>
                    <TextView
                        android:id="@+id/detail_start_time"
                        android:layout_width="76dp"
                        android:layout_height="match_parent"
                        android:text="오전 11:00"
                        android:textColor="#4B4B4B"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_gravity="end"/>
                </LinearLayout>
                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_picker"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addschedule_start"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="gone">
                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="136dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="55dp"
                        android:id="@+id/date_picker"/>
                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="136dp"
                        app:layout_constraintStart_toEndOf="@+id/date_picker"
                        android:layout_marginStart="38dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/am_or_pm"/>
                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="136dp"
                        android:id="@+id/time_picker"
                        app:layout_constraintStart_toEndOf="@id/am_or_pm"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="38dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>



                <TextView
                    android:layout_width="30dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="종료"
                    android:textColor="#4B4B4B"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/start_picker"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toEndOf="@id/start_icon"
                    android:layout_marginStart="12dp"/>

                <LinearLayout
                    android:layout_width="194dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/start_picker"
                    android:layout_marginTop="16dp"
                    android:id="@+id/addschedule_end"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="102dp"
                        android:layout_height="24dp"
                        android:id="@+id/detail_end_date"
                        android:layout_marginEnd="16dp"
                        android:textColor="#4B4B4B"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text=""/>
                    <TextView
                        android:id="@+id/detail_end_time"
                        android:layout_width="76dp"
                        android:layout_height="match_parent"
                        android:text="오후 11:00"
                        android:textColor="#4B4B4B"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_gravity="end"/>
                </LinearLayout>




                <View
                    android:id="@+id/memo_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addschedule_end" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="메모"
                    android:textColor="#4B4B4B"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/addschedule_end"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toEndOf="@id/memo_icon"
                    android:layout_marginStart="12dp"/>

                <EditText
                    android:id="@+id/memo"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="top"
                    android:background="@drawable/addschedule_memo_backgroud"
                    android:hint="이 일정에 대한 메모를 적어주세요."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/memo_icon"
                    android:padding="6dp"
                    android:maxLines="3"/>



                <View
                    android:id="@+id/invite_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/memo" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/to_invite_button"
                    app:layout_constraintTop_toBottomOf="@id/memo"
                    app:layout_constraintStart_toEndOf="@id/invite_icon"
                    app:layout_constraintEnd_toStartOf="@id/invite_icon2"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:id="@+id/invite_button"
                        android:layout_width="78dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="참석자 초대"
                        android:textColor="#4B4B4B"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="24dp"
                        android:gravity="end"
                        android:text="홍현지 외 1명"
                        android:textColor="#4B4B4B"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/invite_icon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/memo" />




                <View
                    android:id="@+id/repeat_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/invite_icon" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/to_repeat_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/invite_icon"
                    app:layout_constraintStart_toEndOf="@id/repeat_icon"
                    app:layout_constraintEnd_toStartOf="@id/repeat_icon2"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="반복 일정"
                        android:textColor="#4B4B4B"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="end"
                        android:text="맞춤 설정"
                        android:textColor="#4B4B4B"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/repeat_icon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/invite_icon" />




                <View
                    android:id="@+id/color_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/repeat_icon" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/to_colorPick_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/repeat_icon"
                    app:layout_constraintStart_toEndOf="@id/color_icon"
                    app:layout_constraintEnd_toStartOf="@id/color_icon2"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="일정 색상"
                        android:textColor="#4B4B4B"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="end"
                        android:text="색상1"
                        android:textColor="#4B4B4B"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/color_icon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/repeat_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/brief_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/schedule_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/brief_dateNTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/brief_date"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:textSize="14sp"
                    android:translationY="-0.64sp"
                    android:gravity="top"
                    android:textColor="#4B4B4B"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="12.24 월요일"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:lineSpacingExtra="1sp"/>

                <TextView
                    android:id="@+id/brief_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:textSize="14sp"
                    android:translationY="-0.64sp"
                    android:gravity="top"
                    android:textColor="#4B4B4B"
                    android:text="오전 10시 20분"
                    app:layout_constraintEnd_toStartOf="@id/brief_dateNTime_bar"
                    app:layout_constraintTop_toTopOf="parent"
                    android:lineSpacingExtra="1sp"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/brief_dateNTime_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:textSize="14sp"
                    android:translationY="-0.64sp"
                    android:gravity="top"
                    android:textColor="#4B4B4B"
                    android:text=" - "
                    app:layout_constraintEnd_toStartOf="@id/brief_end_time"
                    app:layout_constraintTop_toTopOf="parent"
                    android:lineSpacingExtra="1sp"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/brief_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:textSize="14sp"
                    android:translationY="-0.64sp"
                    android:gravity="top"
                    android:textColor="#4B4B4B"
                    android:text="오후 12시 30분"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:lineSpacingExtra="1sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addschedule_frame"
        android:background="@drawable/addscedule_backgroud"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/bar"
        android:layout_width="88dp"
        android:layout_height="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/graybar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
