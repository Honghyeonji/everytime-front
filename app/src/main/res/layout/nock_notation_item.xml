<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/bt_border"
    android:backgroundTint="@color/black"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/rv_followList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F6F9FB"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgFollowNotation"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/notation_profile"
                android:layout_marginTop="24dp"/>
            <TextView
                android:id="@+id/textFollowNotation"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:layout_marginStart="12dp"
                android:text="xxxsss_님이 노크메이트가 되고 싶어 해요"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <Button
                android:id="@+id/btFollowDecline"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/bt_border"
                android:backgroundTint="#DFE9EF"
                android:text="거절"
                android:textSize="14sp"
                android:textColor="#7A7A7A"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btFollowAccept"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/bt_border"
                android:backgroundTint="#FF7A53"
                android:text="수락"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="20dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
