<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F9FB">

    <ImageView
        android:id="@+id/imgFollowNotation"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/notation_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textFollowNotation"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/spoqahansansneo_regular"
        android:text="xxxsss_님이 노크메이트가 되고 싶어 해요"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/imgFollowNotation"
        app:layout_constraintLeft_toRightOf="@id/imgFollowNotation"
        app:layout_constraintTop_toTopOf="@id/imgFollowNotation" />

    <ImageButton
        android:id="@+id/btFollowDecline"
        android:layout_width="156dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/bt_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btFollowAccept"
        app:layout_constraintTop_toBottomOf="@id/imgFollowNotation"
        app:tint="#DFE9EF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqahansansneo_bold"
        android:text="거절"
        android:textColor="#7A7A7A"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/btFollowDecline"
        app:layout_constraintLeft_toLeftOf="@id/btFollowDecline"
        app:layout_constraintRight_toRightOf="@id/btFollowDecline"
        app:layout_constraintTop_toTopOf="@id/btFollowDecline" />

    <ImageButton
        android:id="@+id/btFollowAccept"
        android:layout_width="156dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/bt_border"
        app:layout_constraintLeft_toRightOf="@id/btFollowDecline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgFollowNotation"
        app:tint="#FF7A53" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqahansansneo_bold"
        android:text="수락"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/btFollowAccept"
        app:layout_constraintLeft_toLeftOf="@id/btFollowAccept"
        app:layout_constraintRight_toRightOf="@id/btFollowAccept"
        app:layout_constraintTop_toTopOf="@id/btFollowAccept" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#EEEEEE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btFollowAccept" />
</androidx.constraintlayout.widget.ConstraintLayout>
